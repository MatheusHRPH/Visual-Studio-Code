<Gerenciador>:
    Menu:
        name:'menu'
    Tarefas:
<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding:root.width*0.25,root.height*0.1
        spacing:'30dp'
        canvas:
            Color:  
                rgba:0,0,0.3,1
            Rectangle:
                size:self.size
                pos:self.pos
        Image:
            source:'Logo.png'
            size_hint_y:None
            height:100
            allow_stretch:True
        Botao:
            text:'Tarefas'
            on_release:app.root.current = 'tarefas'
            size_hint_y:None
            height:50
            
        Botao:
            text:'Assistente'
            size_hint_y:None
            height:50
        Botao:
            text:'Sair'
            on_release:root.confirmacao()
            size_hint_y:None
            height:50
<Tarefas>:
    name: 'tarefas'
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:'Tarefas'
                    on_release:app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release:root.confirmacao()
                
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height
        BoxLayout:
            size_hint_y:None
            height:'40sp'
            TextInput:
                id:textotarefa
            Button:
                text:'+'
                size_hint_x:None
                width:'40sp'
                on_release:root.addWidget()
<Tarefa>:
    size_hint_y:None
    height:'100sp'

    Label:
        id:label
        font_size:'20sp'
        
    Button:
        text:'X'
        size_hint_x:None
        width:'40sp'
        on_release:app.root.get_screen('tarefas').removeWidget(root)
